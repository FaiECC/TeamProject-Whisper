<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.whisper">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="whisper"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Whisper"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".Timeline_sub"
            android:exported="true" />
        <activity android:name=".ChoosedUser" />
        <activity android:name=".Search" />
        <activity android:name=".ProfileEdit" />
        <activity android:name=".WhisperUpload" />
        <activity android:name=".Timeline" />
        <activity android:name=".Follow" />
        <activity android:name=".Registration" />
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>